<component>
    <consts>
        <string name="title" value="WiFi Settings"/>
    </consts>

    <styles>
        <style name="dark" bg_color="0x333333"/>
        <style name="header_style" bg_color="0x444444" text_color="0xFFFFFF" pad_all="10"/>
        <style name="label_style" text_color="0xFFFFFF" pad_all="5"/>
        <style name="input_style" bg_color="0x555555" text_color="0xFFFFFF" border_width="1" border_color="0x666666" pad_all="8"/>
        <style name="button_style" bg_color="0x0066CC" text_color="0xFFFFFF" radius="5" pad_all="10"/>
    </styles>

    <view extends="lv_obj" width="100%" height="100%"
        style_pad_all="0"
        style_margin_all="0"
        style_border_width="0" styles="dark">
        <!-- Header -->
        <lv_label text="#title" styles="header_style" align="center" y="10" width="100%"/>
        
        <!-- WiFi SSID Label -->
        <lv_label text="WiFi SSID" styles="label_style" x="10" y="40" width="100%"/>
        
        <!-- WiFi SSID Dropdown -->
        <lv_dropdown name="wifi_ssid" x="10" y="60" width="300" height="25" styles="input_style">
            <lv_dropdown-list>
                <lv_label text="Select Network"/>
            </lv_dropdown-list>
        </lv_dropdown>
        
        <!-- WiFi Password Label -->
        <lv_label text="WiFi Password" styles="label_style" x="10" y="95" width="100%"/>
        
        <!-- WiFi Password Text Area -->
        <lv_textarea name="wifi_password" x="10" y="115" width="300" height="25" styles="input_style" placeholder_text="Enter password"/>
        
        <!-- Button Container -->
        <lv_obj x="10" y="150" width="300" height="40" style_bg_opa="0" style_border_width="0">
            <!-- Save Button -->
            <lv_button text="Save" styles="button_style" x="0" y="0" width="90" height="35"/>
            <!-- Cancel Button -->
            <lv_button text="Cancel" styles="button_style" x="210" y="0" width="90" height="35"/>
        </lv_obj>
        
        <!-- Status Label -->
        <lv_label text="Select WiFi network and enter password" styles="label_style" x="10" y="200" width="100%" align="center"/>
    </view>
</component>